{
  "compilerOptions": {
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist/"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/tests/*", "**/*.spec.ts"]
}
