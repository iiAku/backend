generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id        String
  token     String   @unique
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  User      User     @relation(fields: [id], references: [id])

  @@id([id, token])
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  Auth      Auth[]
}
