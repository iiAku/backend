generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id             String       @unique
  organizationId String
  ip             String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @default(now())
  Organization   Organization @relation(fields: [organizationId], references: [id])

  @@id([id, organizationId])
}

model Menu {
  id                      String                    @unique
  name                    String?
  organizationId          String
  Organization            Organization              @relation(fields: [organizationId], references: [id])
  categories          categories[]          @relation("MenuTo_categories")
  productPrice       productPrice[]       @relation("MenuTo_productPrice")
  optionPrice optionPrice[] @relation("MenuTo_optionPrice")

  @@id([id, organizationId])
}

model MenuCategory {
  id                        String                      @unique
  orgnanizationId           String
  name                      String?
  Organization              Organization                @relation(fields: [orgnanizationId], references: [id])
  products products[] @relation("MenuCategoryTo_products")
  categories            categories[]            @relation("MenuCategoryTo_categories")

  @@id([id, orgnanizationId])
}

model MenuProduct {
  id                             String                           @unique
  organizationId                 String
  name                           String
  description                    String?
  Organization                   Organization                     @relation(fields: [organizationId], references: [id])
  products      products[]      @relation("MenuProductTo_products")
  options options[] @relation("MenuProductTo_options")
  productPrice              productPrice[]              @relation("MenuProductTo_productPrice")

  @@id([id, organizationId])
}

model MenuProductOption {
  id                             String                           @unique
  organizationId                 String
  description                    String?
  Organization                   Organization                     @relation(fields: [organizationId], references: [id])
  options options[] @relation("MenuProductOptionTo_options")
  optionPrice        optionPrice[]        @relation("MenuProductOptionTo_optionPrice")

  @@id([id, organizationId])
}

model Organization {
  id                String              @id
  email             String              @unique
  password          String
  createdAt         DateTime            @default(now())
  Auth              Auth[]
  Menu              Menu[]
  MenuCategory      MenuCategory[]
  MenuProduct       MenuProduct[]
  MenuProductOption MenuProductOption[]
  Shop              Shop[]
}

model Shop {
  id             String       @unique
  organizationId String
  name           String
  description    String?
  siret          String
  address_line   String
  address_line2  String?
  city           String
  state          String
  zip            String
  country        String
  Organization   Organization @relation(fields: [organizationId], references: [id])

  @@id([id, organizationId])
}

model products {
  categoryId   String
  productId    String
  MenuCategory MenuCategory @relation("MenuCategoryTo_products", fields: [categoryId], references: [id])
  MenuProduct  MenuProduct  @relation("MenuProductTo_products", fields: [productId], references: [id])

  @@id([categoryId, productId])
  @@map("_MenuCategoryToMenuProduct")
}

model options {
  optionId          String
  productId         String
  MenuProductOption MenuProductOption @relation("MenuProductOptionTo_options", fields: [optionId], references: [id])
  MenuProduct       MenuProduct       @relation("MenuProductTo_options", fields: [productId], references: [id])

  @@id([optionId, productId])
  @@map("_MenuProductOptionToMenuProduct")
}

model categories {
  menuId       String
  categoryId   String
  MenuCategory MenuCategory @relation("MenuCategoryTo_categories", fields: [categoryId], references: [id])
  Menu         Menu         @relation("MenuTo_categories", fields: [menuId], references: [id])

  @@id([menuId, categoryId])
  @@map("_MenuToCategory")
}

model productPrice {
  menuId      String
  productId   String
  price       Int
  Menu        Menu        @relation("MenuTo_productPrice", fields: [menuId], references: [id])
  MenuProduct MenuProduct @relation("MenuProductTo_productPrice", fields: [productId], references: [id])

  @@id([menuId, productId])
  @@map("_MenuToMenuProduct")
}

model optionPrice {
  menuId            String
  optionId          String
  price             Int
  Menu              Menu              @relation("MenuTo_optionPrice", fields: [menuId], references: [id])
  MenuProductOption MenuProductOption @relation("MenuProductOptionTo_optionPrice", fields: [optionId], references: [id])

  @@id([menuId, optionId])
  @@map("_MenuToMenuProductOption")
}
